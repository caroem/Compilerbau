SCANNER expr_scan

PARSER  expr_pars

GLOBAL {
 # include <stdio.h>
}


PREC LEFT  '+' '-'
     LEFT  '*' '/'

RULE
root 	= x.

x	= < 
	= '#' name ';' var exec
	.
> .

name	= < 
	=  identifier
	.
> .

var	= <
	= typdef name ';'
	.
	= var var
	.
> .

typdef 	= <
	= 'int'
	.
	= 'float'
	.
	= 'String'
	.
> .

exec	= <
	= 'BEGIN' body 'END' ';'
	.
	=
	.
>.

body 	= <
	= varallocation
	.
	= statement
	.
	= body body
	.
>.

statement = <
	  = ifstmt
	  .
	  = whilestmt
	  .
	  = forstmt
	  .
>.

varallocation = <
	 = name '='expr ';'
	 .
	 = name '=' exprstring
	 .
>.

ifstmt = <
	  = 'if' condition 'then' body
	  .
	  = 'if' condition 'then' body 'else' body
	  .
>.

whilestmt = <
	  = 'while' '(' expr ')' body
	  .
  >.

forstmt = <
	  = 'for' '(' int_const ')'body
	  .
>.

condition = <
	  = '(' expr ')'
	  .
>.
	  

expr = <
    = l:expr '+' r:expr
    .
    = l:expr '-' r:expr
    .
    = l:expr '*' r:expr
    .
    = l:expr '/' r:expr
    .
    = l:expr '<' r:expr
    .
    = l:expr '>' r:expr
    .
    = l:expr '==' r:expr
    .
    = '(' expr ')'
    .
    = int_const
    .
    = float_const
    .
    = identifier
    .
 > .
 
 exprstring = <
    = identfier
    .
    = string_const
    .
    = exprstring '+' exprstring
    .
    
 >.


/* Tokens */
key: [Value: tIdent] {Value := NoIdent;} .
int_const:    [Value: long]   {Value := 0;  } .
float_const:  [Value: double] {Value := 0.0;} .
string_const: [Value: tIdent] {Value := NoIdent;} .
identifier:   [Ident: tIdent] {Ident := NoIdent; } .